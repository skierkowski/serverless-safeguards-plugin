{
  "name": "serverless-safeguards",
  "version": "1.0.0",
  "description": "Serverless Framework Plugin for Safeguards",
  "main": "index.js",
  "repository": "https://github.com/skierkowski/serverless-safeguards",
  "author": "Maciej Skierkowski",
  "license": "Apache-2.0",
  "scripts": {
    "test": "mocha \"!(node_modules)/**/*.test.js\"",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "lint:updated": "pipe-git-updated --ext=js -- eslint"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.0.1",
    "iso8601-duration": "^1.2.0",
    "jsonata": "^1.8.3",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "semver": "^7.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@serverless/eslint-config": "^2.1.1",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "git-list-updated": "^1.2.1",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.2"
  },
  "eslintConfig": {
    "extends": "@serverless/eslint-config/node",
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/scripts/**",
            "**/test/**",
            "prettier.config.js"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{css,html,js,json,md,yaml,yml}": [
      "prettier -c"
    ]
  }
}
